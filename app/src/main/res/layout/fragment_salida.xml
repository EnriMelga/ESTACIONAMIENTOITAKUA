<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.salida.SalidaFragment">

    <TextView
        android:id="@+id/NumerodePlacaText"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_marginTop="92dp"
        android:text="Numero de Placa:"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/NumerodePlaca"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/lineadobarra"
        android:gravity="center"
        android:textColor="@color/black"
        android:inputType="textPersonName"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/NumerodePlacaText" />

    <TextView
        android:id="@+id/id_ModoManual"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginTop="210dp"
        android:text="Modo Manual"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/NumerodePlaca" />

    <TextClock
        android:id="@+id/HoraModificable"
        android:layout_width="140dp"
        android:layout_height="38dp"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.697"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginTop="253dp"
        android:gravity="center"
        android:text="HORA:"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MontoText"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="340dp"
        android:text="Monto"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/NumerodePlacaText" />

    <Button
        android:id="@+id/ImprimirRegistro"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="375dp"
        android:background="@drawable/boton_impresora"
        android:drawableLeft="@drawable/ic_baseline_print_35"
        android:paddingStart="12dp"
        android:text="Imprimir"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/NumerodePlaca" />

</androidx.constraintlayout.widget.ConstraintLayout>