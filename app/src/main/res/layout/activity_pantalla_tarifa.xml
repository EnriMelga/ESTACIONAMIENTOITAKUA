<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaTarifa"
    android:background="@drawable/fondo_de_app"
    >

    <TextView
        android:id="@+id/ModificarMonto"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="Modificar Monto"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="100dp"
        android:text="Tipo"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ModificarMonto" />

    <Spinner
        android:id="@+id/tipoDeVehiculo"
        android:layout_width="178dp"
        android:layout_height="51dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/ModificarMonto" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="72dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="184dp"
        android:text="Hora:"
        android:textColor="@color/black"

        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ModificarMonto" />

    <EditText
        android:id="@+id/horaTarifa"
        android:layout_width="191dp"
        android:layout_height="36dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="92dp"
        android:background="#30ffffff"
        android:textSize="25dp"
        android:inputType="number"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/tipoDeVehiculo" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="55dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:text="Dia:"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <EditText
        android:id="@+id/diaTarifa"
        android:layout_width="191dp"
        android:layout_height="36dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="80dp"
        android:background="#30ffffff"
        android:textSize="25dp"
        android:inputType="number"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/horaTarifa" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="98dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:text="Semana:"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <EditText
        android:id="@+id/semanaTarifa"
        android:layout_width="191dp"
        android:layout_height="36dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="80dp"
        android:background="#30ffffff"
        android:textSize="25dp"
        android:inputType="number"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/diaTarifa" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="68dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:text="Mes:"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <EditText
        android:id="@+id/mesTarifa"
        android:layout_width="191dp"
        android:layout_height="36dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="80dp"
        android:background="#30ffffff"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/semanaTarifa"
        />

    <Button
        android:layout_width="136dp"
        android:layout_height="54dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/boton_redondo"
        android:hint="Guardar"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mesTarifa" />


</androidx.constraintlayout.widget.ConstraintLayout>