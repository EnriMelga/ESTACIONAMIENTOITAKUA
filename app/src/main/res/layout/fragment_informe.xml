<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.informe.InformeFragment">

    <Button
        android:id="@+id/Btn_Arqueo_de_caja"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="70dp"
        android:textSize="17dp"
        android:drawableLeft="@drawable/ic_baseline_attach_money_24"
        android:text="Arqueo de Caja"
        android:layout_marginEnd="50dp"
        android:padding="25dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:background="@drawable/boton_redondo_sin_color"
        android:backgroundTint="#64B5F6"/>

    <Button
        android:id="@+id/Btn_Historico"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/boton_redondo_sin_color"
        android:backgroundTint="#64B5F6"
        android:text="Historico                "
        android:textSize="17dp"
        android:drawableLeft="@drawable/ic_baseline_content_paste_search_24"
        android:paddingStart="25dp"
        />

    <Button
        android:id="@+id/Btn_Estacionamiento_tiempo_real"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/boton_redondo_sin_color"
        android:backgroundTint="#64B5F6"
        android:text="Estacionamiento            en Tiempo Real"
        android:textSize="17dp"
        android:drawableLeft="@drawable/ic_auto"
        android:paddingStart="23dp"
        />

    <Button
        android:id="@+id/Btn_Resumen_financiero_mensual"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/boton_redondo_sin_color"
        android:backgroundTint="#64B5F6"
        android:text="   Resumen Financiero Mensual"
        android:textSize="17dp"
        android:drawableLeft="@drawable/ic_baseline_check_24"
        android:paddingStart="25dp"
        />

</FrameLayout>